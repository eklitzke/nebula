#! /bin/sh

TARGET="nebula"

CXX="g++"
CXXFLAGS="-Wall -Wextra -Werror -std=c++11 `sdl-config --cflags`"

LDFLAGS="`sdl-config --libs`"

if [ "$1" == "--debug" ]; then
	CXXFLAGS+=" -ggdb -DDEBUG"
else
	CXXFLAGS+=" -O3"
fi

cat <<EOF > config.mk
# config.mk generated by configure.

TARGET = $TARGET

CXX = $CXX
CXXFLAGS = $CXXFLAGS

LDFLAGS = $LDFLAGS

# EOF
EOF
